<h1>Update Pet</h1>
<form action="/pets/<%=pet.id%>" method="post">
  <label>Name:</label>
  <br>
  <input type="text" 
  name="pet[name]" 
  id="pet_name"
  value="<%=pet.name%>">
  <br>
  <label>choose an existing owner:</label>
  <br>
  <%Owner.all.each do |owner|%>
  <input type="checkbox" 
  name="" 
  id="<%=owner.id%>"
  value="<%=owner.id%>"
  <%='checked' if @pet.owner.include?(owner)%>>
  <%=pet.name%>
</input>
  <%end%> 
</form>
